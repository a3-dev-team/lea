  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run nvm use 16.13.1 on startup",
      "type": "shell",
      "command": "nvm use 16.13.1",
      "windows": {
        "command": "nvm use 16.13.1"
      },
      "options": {
        "cwd": "${workspaceFolder}/front"
      },
      "presentation": {
        "reveal": "always",
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Run npm start on startup",
      "type": "shell",
      "command": "npm run start",
      "windows": {
        "command": "npm run start"
      },
      "options": {
        "cwd": "${workspaceFolder}/front"
      },
      "dependsOrder": "sequence",
      "dependsOn": [
        "Run nvm use 16.13.1 on startup"
      ],
      "presentation": {
        "reveal": "always",
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Run dotnet watch",
      "type": "shell",
      "command": "dotnet watch",
      "windows": {
        "command": "dotnet watch"
      },
      "options": {
        "cwd": "${workspaceFolder}/back/Cycle1.WebApi/Cycle1.WebApi"
      },
      "presentation": {
        "reveal": "always",
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
  ]
}